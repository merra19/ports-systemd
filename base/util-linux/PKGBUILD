# description	: Various useful Linux utilities
# depends	: libxcrypt pcre2 ncurses zlib readline sqlite systemd
# depends	: bash-completion

pkgname=util-linux
pkgver=2.41.1
pkgrel=1
options=(strip)
source=(https://www.kernel.org/pub/linux/utils/util-linux/v${pkgver:0:4}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --bindir=/usr/bin \
        --libdir=/usr/lib \
        --runstatedir=/run \
        --sbindir=/usr/sbin \
        --disable-chfn-chsh \
        --disable-login \
        --disable-nologin \
        --disable-su \
        --disable-setpriv \
        --disable-runuser \
        --disable-pylibmount \
        --disable-static \
        --without-python \
        --docdir=/usr/share/doc/$pkgname-$pkgver \
        ADJTIME_PATH=/var/lib/hwclock/adjtime 
    make

    mkdir -pv "$pkgdir"/var/lib/hwclock

    make DESTDIR="$pkgdir" install
}
