# description	: Excellent text file viewer
# depends	: ncurses

pkgname=less
pkgver=679
pkgrel=1
options=(!lto)
source=(https://www.greenwoodsoftware.com/less/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc
    make
    make DESTDIR="$pkgdir" install
}
