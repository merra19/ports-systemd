# description	: GNU macro processor
# depends	: glibc xz

pkgname=m4
pkgver=1.4.20
pkgrel=1
options=(!lto)
source=(https://mirror.lyrahosting.com/gnu/m4/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr
    make  
    make DESTDIR="$pkgdir" install
}
