# description	: GNU regular expression matche
# depends	: glibc pcre2

pkgname=grep
pkgver=3.12
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/grep/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    #Â First, remove a warning about using egrep and fgrep that makes tests
    # on some packages fail
    sed -i "s/echo/#echo/" src/egrep.sh

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}
