# description	: GNU awk pattern-matching language
# depends	: readline bison texinfo

pkgname=gawk
pkgver=5.3.2
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/gawk/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    # Ensure some unneeded files are not installed
    sed -i 's/extras//' Makefile.in

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install

    ln -sv gawk.1 "$pkgdir"/usr/share/man/man1/awk.1

    mkdir -pv  "$pkgdir"/usr/share/doc/$pkgname-$pkgver
    cp    -v doc/{awkforai.txt,*.{eps,pdf,jpg}} "$pkgdir"/usr/share/doc/$pkgname-$pkgver
}
