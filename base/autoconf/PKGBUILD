# description	: Used to create autoconfiguration file
# depends	: m4 perl

pkgname=autoconf
pkgver=2.72
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/autoconf/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}
