# description	: GNU utilities for finding files
# depends	: glibc

pkgname=findutils
pkgver=4.10.0
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/findutils/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --localstatedir=/var/lib/locate
    make
    make DESTDIR="$pkgdir" install
}
