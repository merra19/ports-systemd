# description	: Library for Neighbor Discovery Protocol
# depends	: glibc

pkgname=libndp
pkgver=1.9
pkgrel=1
source=(http://libndp.org/files/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}