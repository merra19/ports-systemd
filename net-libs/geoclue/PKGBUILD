# description	: A location information D-Bus service
# depends	: json-glib libsoup3 libnotify vala avahi modemmanager

pkgname=geoclue
pkgver=2.7.2
pkgrel=1
source=(https://gitlab.freedesktop.org/geoclue/geoclue/-/archive/$pkgver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gtk-doc=false \
        -D nmea-source=true \
        -D 3g-source=true \
        -D cdma-source=true \
        -D modem-gps-source=true \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}