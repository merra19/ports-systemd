# description	: Libraries providing APIs to netlink protocol based Linux kernel interfaces"
# depends	: python

pkgname=libnl
pkgver=3.11.0
_version=$(echo $pkgver | sed 's/\./_/g')
pkgrel=1
source=(https://github.com/thom311/libnl/releases/download/libnl${_version}/$pkgname-$pkgver.tar.gz)
backup=(etc/libnl/classid etc/libnl/pktloc)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
		--sysconfdir=/etc \
		--disable-static
	make
    make DESTDIR="$pkgdir" install
}