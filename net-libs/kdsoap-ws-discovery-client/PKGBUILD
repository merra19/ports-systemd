# description	: WS-Discovery client library based on KDSoap
# depends	: kdsoap extra-cmake-modules

pkgname=kdsoap-ws-discovery-client
pkgver=0.4.0
pkgrel=1
source=(https://download.kde.org/stable/kdsoap-ws-discovery-client/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_BUILD_TYPE=Release \
        -D CMAKE_SKIP_INSTALL_RPATH=ON \
        -D QT_MAJOR_VERSION=6 \
        -D CMAKE_DISABLE_FIND_PACKAGE_Doxygen="$(scratch isinstalled doxygen && echo "OFF" || echo "ON")"
    make -C build
    make DESTDIR="$pkgdir" install -C build
}