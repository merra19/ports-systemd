# description	: X.Org xcvt library and cvt program
# depends	: meson

pkgname=libxcvt
pkgver=0.1.3
pkgrel=1
source=(https://www.x.org/pub/individual/lib/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}