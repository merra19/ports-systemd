# description	: X.Org autotools utility macros
# depends	: glibc

pkgname=util-macros
pkgver=1.20.2
pkgrel=1
source=(https://www.x.org/pub/individual/util/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make DESTDIR="$pkgdir" install
}