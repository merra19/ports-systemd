# description	: Locale and ISO 2022 support for Unicode terminals
# depends	: zlib groff xorg-applications

pkgname=luit
pkgver=20240910
pkgrel=1
source=(https://invisible-mirror.net/archives/luit/$pkgname-$pkgver.tgz)

build() {
	cd $pkgname-$pkgver

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
    make DESTDIR="$pkgdir" install
}