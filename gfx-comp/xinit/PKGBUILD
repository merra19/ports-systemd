# description	: X Window System initializer
# depends	: xorg-libs

pkgname=xinit
pkgver=1.4.4
pkgrel=1
source=(https://www.x.org/pub/individual/app/xinit-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --with-xinitdir=/etc/X11/app-defaults
    make
    make DESTDIR="$pkgdir" install
}