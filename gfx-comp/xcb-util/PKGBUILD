# description	: X C-language Bindings sample implementations
# depends	: libxcb xorg-proto

pkgname=xcb-util
pkgver=0.4.1
pkgrel=1
source=(https://xcb.freedesktop.org/dist/$pkgname-$pkgver.tar.xz)

build() { 
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}