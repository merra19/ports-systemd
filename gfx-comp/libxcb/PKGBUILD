# description	: X C-language Bindings library
# depends	: libxau libxdmcp xcb-proto util-macros xorg-proto

pkgname=libxcb
pkgver=1.17.0
pkgrel=1
source=(https://xorg.freedesktop.org/archive/individual/lib/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    PYTHON=python3 \
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --without-doxygen \
        --docdir='${datadir}'/doc/$pkgname-$pkgver
    LC_ALL=en_US.UTF-8 make
    make DESTDIR="$pkgdir" install

    chown -Rv root:root "$pkgdir"/usr/share/doc/libxcb-1.17.0
}