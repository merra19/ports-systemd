# description	: Terminal emulator for the X Window System
# depends	: ncurses xorg-libs luit ttf-dejavu

pkgname=xterm
pkgver=401
pkgrel=1
source=(http://invisible-mirror.net/archives/$pkgname/$pkgname-$pkgver.tgz)

build() {
	cd $pkgname-$pkgver

    sed -i '/v0/{n;s/new:/new:kb=^?:/}' termcap &&
    printf '\tkbs=\\177,\n' >> terminfo &&

    TERMINFO=/usr/share/terminfo \
    ./configure $XORG_CONFIG     \
        --with-app-defaults=/etc/X11/app-defaults &&
	make
	make DESTDIR="$pkgdir" install

	install -m755 -d $pkgdir/usr/share/applications
    cp -v *.desktop "$pkgdir"/usr/share/applications/

    cat >> "$pkgdir"/etc/X11/app-defaults/XTerm << "EOF"
*VT100*locale: true
*VT100*faceName: Monospace
*VT100*faceSize: 10
*backarrowKeyIsErase: true
*ptyInitialErase: true
EOF
}