# description	: Fonts from the Linux Libertine Open Fonts Project
# depends	: fontconfig

pkgname=ttf-linux-libertine
pkgver=5.3.0.20120702
pkgrel=1
date="${pkgver##*.}"
_pkgver="${pkgver%.*}_${date:0:4}_${date:4:2}_${date:6:2}"
source=(https://sourceforge.net/projects/linuxlibertine/files/linuxlibertine/${pkgver::5}/LinLibertineTTF_$_pkgver.tgz
		https://sourceforge.net/projects/linuxlibertine/files/linuxlibertine/${pkgver::5}/LinLibertineOTF_$_pkgver.tgz)

build() {
	mkdir -p "$pkgdir"/usr/share/fonts/TTF "$pkgdir"/usr/share/fonts/OTF
    
	cp ./*.ttf "$pkgdir"/usr/share/fonts/TTF
    cp ./*.otf "$pkgdir"/usr/share/fonts/OTF
}
