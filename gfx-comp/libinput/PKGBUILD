# description	: Library to handle input devices in Wayland
# depends	: libevdev mtdev meson systemd gtk3 libwacom

pkgname=libinput
pkgver=1.29.0
pkgrel=2
source=(https://gitlab.freedesktop.org/libinput/libinput/-/archive/$pkgver/libinput-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D debug-gui=false \
        -D tests=false \
        -D libwacom=true \
        -D udev-dir=/usr/lib/udev \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}