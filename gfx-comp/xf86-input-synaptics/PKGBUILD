# description	: Driver for Synaptics touchpads
# depends	: libevdev xorg-server systemd

pkgname=xf86-input-synaptics
pkgver=1.10.0
pkgrel=1
source=(https://www.x.org/pub/individual/driver/$pkgname-$pkgver.tar.xz)

 build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}