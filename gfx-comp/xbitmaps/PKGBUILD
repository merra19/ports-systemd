# description	: X.Org bitmaps data
# depends	: glibc util-macros

pkgname=xbitmaps
pkgver=1.1.3
pkgrel=1
source=(https://www.x.org/pub/individual/data/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make DESTDIR="$pkgdir" install
}