# description	: KDE Framework
# depends	: kde-pre-conf extra-cmake-modules breeze-icons libgcrypt
# depends	: docbook-xml docbook-xsl-nons libcanberra libical libxslt
# depends	: lmdb qca libqrencode plasma-wayland-protocols perl-uri
# depends	: shared-mime-info curl aspell aspell-fr aspell-en avahi
# depends	: polkit-qt modemmanager networkmanager vulkan-loader
# depends	: zxing-cpp bluez noto-fonts py3-requests libavif libjxl
# depends	: libraw udisks upower gpgmepp py3-doxypypy py3-doxyqml
# depends	: doxygen python py3-wheel py3-gpep517 py3-setuptools
# depends	: py3-jinja2 py3-yaml 

pkgname=attica
pkgver=6.17.0
pkgrel=1
source=(https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_INSTALL_LIBEXECDIR=libexec \
        -D CMAKE_PREFIX_PATH=/usr \
        -D CMAKE_SKIP_INSTALL_RPATH=ON  \
        -D CMAKE_BUILD_TYPE=Release \
        -D BUILD_TESTING=OFF \
        -D BUILD_PYTHON_BINDINGS=OFF \
        -Wno-dev
    make -C build
    make DESTDIR="$pkgdir" install -C build

}
