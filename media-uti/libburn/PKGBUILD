# description	: Open-source library for reading, mastering and writing optical discs
# depends	: glibc

pkgname=libburn
pkgver=1.5.6
pkgrel=1
source=(https://files.libburnia-project.org/releases/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	# First, fix a problem when building with gcc-15
	sed -i 's/catch_int ()/catch_int (int signum)/' test/poll.c

	./configure \
		--prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}