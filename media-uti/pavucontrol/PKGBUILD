# description	: Pulseaudio Volume Control, GTK based mixer for Pulseaudio
# depends	: gtkmm json-glib libcanberra libsigc++-3 pulseaudio

pkgname=pavucontrol
pkgver=6.1
pkgrel=1
source=(https://freedesktop.org/software/pulseaudio/pavucontrol/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D lynx=disabled \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build

    mv "$pkgdir"/usr/share/doc/pavucontrol "$pkgdir"/usr/share/doc/pavucontrol-$pkgver
}