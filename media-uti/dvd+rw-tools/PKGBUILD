# description	: A set of tools for DVD+RW/-RW drives
# depends	: cdrtools

pkgname=dvd+rw-tools
pkgver=7.1
pkgrel=1
source=(https://anduin.linuxfromscratch.org/BLFS/dvd+rw-tools/$pkgname-$pkgver.tar.gz
		https://www.linuxfromscratch.org/patches/blfs/svn/dvd+rw-tools-7.1-consolidated_fixes-2.patch)

build() {
	cd $pkgname-$pkgver

	patch -Np1 -i ../dvd+rw-tools-7.1-consolidated_fixes-2.patch

	make all rpl8 btcflash
	make prefix=$pkgdir/usr install &&
	install -v -m644 -D index.html \
		"$pkgdir"/usr/share/doc/$pkgname-$pkgver/index.html
}