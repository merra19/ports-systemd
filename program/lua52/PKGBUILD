# description	: A powerful light-weight programming language designed for extending applications
# depends	: readline

pkgname=lua52
_pkgname=lua
pkgver=5.2.4
pkgrel=1
options=(!lto)
source=(https://www.lua.org/ftp/${_pkgname}-$pkgver.tar.gz
        https://www.linuxfromscratch.org/patches/blfs/12.4/lua-$pkgver-shared_library-1.patch
        lua.pc LICENSE)

build() {
	cd ${_pkgname}-$pkgver

    cp ../lua.pc ./
    cp ../LICENSE ./

    patch -Np1 -i ../lua-$pkgver-shared_library-1.patch

    sed -i '/#define LUA_ROOT/s:/usr/local/:/usr/:' src/luaconf.h &&

    sed -r -e '/^LUA_(SO|A|T)=/ s/lua/lua5.2/' \
        -e '/^LUAC_T=/ s/luac/luac5.2/' \
        -i src/Makefile

    if [ "$OPTFLAGS" = "yes" ];then
        export CFLAGS="-O2 -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=32 -Wformat -Wformat-security -Wno-error -Wl,-z,max-page-size=0x4000 -march=$MMARCH -fno-lto -O3 -fno-lto -fstack-protector-strong -fzero-call-used-regs=used $DEBUGFLAGS"
        export CXXFLAGS="$CFLAGS"
        export FFLAGS="-O2 -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=32 -Wno-error -Wl,-z,max-page-size=0x4000 -march=$MMARCH -O3 -fno-lto -fstack-protector-strong -fzero-call-used-regs=used $DEBUGFLAGS"
        export FCFLAGS="$FFLAGS"
    fi

    make linux MYCFLAGS="${CFLAGS} -fpic" MYLDFLAGS="${CFLAGS}"
    make TO_BIN='lua5.2 luac5.2' \
        TO_LIB="liblua5.2.so liblua5.2.so.5.2 liblua5.2.so.5.2.4" \
        INSTALL_DATA="cp -d" \
        INSTALL_TOP="$pkgdir"/usr \
        INSTALL_INC="$pkgdir"/usr/include/lua5.2 \
        INSTALL_MAN="$pkgdir"/usr/share/man/man1 \
        install 

    install -Dm644 lua.pc "$pkgdir"/usr/lib/pkgconfig/lua52.pc &&

    mkdir -pv "$pkgdir"/usr/share/doc/lua-$pkgver
    cp -v doc/*.{html,css,gif,png} "$pkgdir"/usr/share/doc/lua-$pkgver

    ln -s liblua5.2.so "$pkgdir"/usr/lib/liblua.so.5.2   &&
    ln -s liblua5.2.so "$pkgdir"/usr/lib/liblua.so.5.2.4 &&

    mv "$pkgdir"/usr/share/man/man1/{lua.1,lua5.2.1} &&
    mv "$pkgdir"/usr/share/man/man1/{luac.1,luac5.2.1}
}