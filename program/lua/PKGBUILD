# description	: A powerful light-weight programming language designed for extending applications
# depends	: readline

pkgname=lua
pkgver=5.4.8
pkgrel=1
options=(!lto)
source=(https://www.lua.org/ftp/$pkgname-$pkgver.tar.gz
         https://www.linuxfromscratch.org/patches/blfs/12.4/lua-$pkgver-shared_library-1.patch
        lua.pc LICENSE)

build() {
	cd $pkgname-$pkgver

    cp ../lua.pc ./
    cp ../LICENSE ./

    patch -Np1 -i ../$pkgname-$pkgver-shared_library-1.patch

    if [ "$OPTFLAGS" = "yes" ];then
        export CFLAGS="-O2 -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=32 -Wformat -Wformat-security -Wno-error -Wl,-z,max-page-size=0x4000 -march=$MMARCH -fno-lto -O3 -fno-lto -fstack-protector-strong -fzero-call-used-regs=used $DEBUGFLAGS"
        export CXXFLAGS="$CFLAGS"
        export FFLAGS="-O2 -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=32 -Wno-error -Wl,-z,max-page-size=0x4000 -march=$MMARCH -O3 -fno-lto -fstack-protector-strong -fzero-call-used-regs=used $DEBUGFLAGS"
        export FCFLAGS="$FFLAGS"
    fi

    make CC=gcc linux MYCFLAGS="${CFLAGS} -fpic -DLUA_COMPAT_5_2 -DLUA_COMPAT_5_1" MYLDFLAGS="${CFLAGS}"
    make CC=cc INSTALL_TOP="$pkgdir"/usr \
        INSTALL_DATA="cp -d" \
        INSTALL_MAN="$pkgdir"/usr/share/man/man1 \
        TO_LIB="liblua.so liblua.so.${pkgver%.*} liblua.so.$pkgver" \
        install

    mkdir -pv  "$pkgdir"/usr/share/doc/$pkgname-$pkgver
    cp -v doc/*.html doc/*.css doc/*.gif doc/*.png "$pkgdir"/usr/share/doc/$pkgname-$pkgver

    install -v -m644 -D lua.pc "$pkgdir"/usr/lib/pkgconfig/lua.pc
}
