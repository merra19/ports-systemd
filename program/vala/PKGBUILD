# description	: Compiler for the GObject type system
# depends	: glib gobject-introspection libxslt

pkgname=vala
pkgver=0.56.18
pkgrel=1
source=(https://download.gnome.org/sources/vala/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
        --disable-valadoc
	make
    make DESTDIR="$pkgdir" install
}