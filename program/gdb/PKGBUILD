# description	: GNU debugger
# depends	: bash expat gcc glibc libgmp elfutils xz libmpfr ncurses
# depends	: readline zstd python boost texinfo py3-six zlib bison

pkgname=gdb
pkgver=16.3
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/gdb/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	mkdir build
	cd    build

	../configure \
		--prefix=/usr \
		--with-system-readline \
		--with-system-zlib \
		--with-python=/usr/bin/python3
	make
	make DESTDIR="$pkgdir" install -C gdb
	make DESTDIR="$pkgdir" install -C gdbserver
}