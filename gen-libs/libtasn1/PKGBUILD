# description	: ASN.1 library
# depends	: glibc help2man bison

pkgname=libtasn1
pkgver=4.20.0
pkgrel=1
options=(!lto)
source=(https://mirror.lyrahosting.com/gnu/libtasn1/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

   ./configure \
        --prefix=/usr \
        --disable-static
    CODE_COVERAGE_LDFLAGS=${LDFLAGS} make
    make DESTDIR="$pkgdir" install
}
