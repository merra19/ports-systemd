# description	: GObject wrapper for libusb
# depends	: glib json-glib libusb gobject-introspection hwdata vala

pkgname=libgusb
pkgver=0.4.9
pkgrel=1
source=(https://github.com/hughsie/libgusb/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D docs=false \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}