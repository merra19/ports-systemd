# description	: Apache Portable Runtime Utility Library
# depends	: apr sqlite gdbm openssl expat
# optional  : openldap postgresql mariadb unixodbc 

pkgname=apr-util
pkgver=1.6.3
pkgrel=1
source=(https://archive.apache.org/dist/apr/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --with-apr=/usr \
        --with-gdbm=/usr \
        --with-openssl=/usr \
        "$(scratch isinstalled openldap && echo "--with-ldap" || echo "--without-ldap")" \
        --with-crypto
    make
    make DESTDIR="$pkgdir" install
}