# description	: Typesafe callback system for standard C++
# depends	: libxslt m4 boost docbook-utils docbook-xml

pkgname=libsigc++-3
_pkgname=libsigc++
pkgver=3.6.0
pkgrel=1
source=(https://download.gnome.org/sources/libsigc++/${pkgver%.*}/${_pkgname}-$pkgver.tar.xz)

build() {
	cd ${_pkgname}-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        bld
	ninja -C bld
	DESTDIR="$pkgdir" ninja install -C bld
}