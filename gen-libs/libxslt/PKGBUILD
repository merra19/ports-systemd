# description	: XSLT libraries and tools
# depends	: libxml2 python

pkgname=libxslt
pkgver=1.1.43
pkgrel=1
source=(https://download.gnome.org/sources/libxslt/1.1/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static \
        PYTHON=/usr/bin/python3 \
        --docdir=/usr/share/doc/$pkgname-$pkgver
    make    
    make DESTDIR="$pkgdir" install
}
