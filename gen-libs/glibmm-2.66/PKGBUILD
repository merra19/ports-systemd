# description	: C++ interface for glib2
# depends	: glib libsigc++-2 libxslt

pkgname=glibmm-2.66
_pkgname=glibmm
pkgver=2.66.8
pkgrel=1
source=(https://download.gnome.org/sources/glibmm/${pkgver%.*}/$_pkgname-$pkgver.tar.xz)

build() {
	cd $_pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        bld
	ninja -C bld
    DESTDIR="$pkgdir" ninja install -C bld
}
