# description	: UTF-8 with C++ in a Portable Way
# depends	: cmake

pkgname=utfcpp
pkgver=4.0.6
pkgrel=1
source=(https://github.com/nemtrif/utfcpp/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

    cmake -B build \
         -D CMAKE_INSTALL_PREFIX=/usr
    make DESTDIR="$pkgdir" install -C build
}
