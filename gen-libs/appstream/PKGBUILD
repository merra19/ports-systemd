# description	: Cross-distro effort for providing metadata for software in the Linux ecosystem
# depends	: zstd libxml2 libxmlb libyaml snowball-stemmer curl 
# depends	: qt6 libxslt itstool

pkgname=appstream
_pkgname=AppStream
pkgver=1.0.6
pkgrel=1
options=(!lto)
source=(https://www.freedesktop.org/software/appstream/releases/AppStream-$pkgver.tar.xz
        metainfo)

build() {
	cd ${_pkgname}-$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D apidocs=false \
        -D qt=true \
        -D qt-versions=6 \
        -D stemming=true \
        build
    ninja -C build
	DESTDIR="$pkgdir" ninja install -C build

	install -Dm 644 "$srcdir"/metainfo "$pkgdir"/usr/share/metainfo
}
