# description	: Library for automatic proxy configuration management
# depends	: curl glib gobject-introspection meson ninja vala duktape
# depends	: gsettings-desktop-schemas

pkgname=libproxy
pkgver=0.5.10
pkgrel=1
source=(https://github.com/libproxy/libproxy/archive/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D release=true \
        -D docs=false \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}