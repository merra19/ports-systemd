# description	: inih (INI not invented here) simple .INI file parser
# depends	: meson

pkgname=inih
pkgver=61
pkgrel=1
source=(https://github.com/benhoyt/inih/archive/r$pkgver/$pkgname-r$pkgver.tar.gz)

build() {
	cd $pkgname-r$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}
