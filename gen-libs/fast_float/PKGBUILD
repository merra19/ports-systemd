# description	: Fast and exact implementation of the C++ from_chars functions for number types
# depends	: cmake

pkgname=fast_float
pkgver=8.0.2
pkgrel=1
source=(https://github.com/fastfloat/fast_float/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver
    
    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_BUILD_TYPE=Release \
        -G Ninja \
        -Wno-dev
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
