# description	: GObject bindings for libudev
# depends	: glib gobject-introspection

pkgname=libgudev
pkgver=238
pkgrel=1
source=(https://ftp.gnome.org/pub/gnome/sources/$pkgname/$pkgver/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}