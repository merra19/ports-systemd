# description	: Userspace RCU (read-copy-update) library
# depends	: glibc

pkgname=liburcu
pkgver=0.15.3
pkgrel=1
source=(https://lttng.org/files/urcu/userspace-rcu-$pkgver.tar.bz2)

build() {
	cd userspace-rcu-$pkgver

	./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/liburcu-$pkgver
	make
    make DESTDIR="$pkgdir" install
}