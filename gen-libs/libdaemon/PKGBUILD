# description	: Simple library for creating daemon processes in C
# depends	: glibc lynx

pkgname=libdaemon
pkgver=0.14
pkgrel=1
source=(https://0pointer.de/lennart/projects/libdaemon/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
        --disable-static
    make
    make DESTDIR="$pkgdir" docdir=/usr/share/doc/$pkgname-$pkgver install   
}
