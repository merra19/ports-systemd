# description	: Samba talloc library
# depends	: glibc python libxslt libnsl libtirpc docbook-xml
# depends	: docbook-xsl-nons

pkgname=talloc
pkgver=2.4.3
pkgrel=1
source=(https://www.samba.org/ftp/talloc/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}
