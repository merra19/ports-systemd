# description	: Spell check library for GTK+ applications"
# depends	: glib gobject-introspection gtk3 icu meson enchant vala

pkgname=gspell
pkgver=1.14.0
pkgrel=1
source=(https://download.gnome.org/sources/gspell/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gtk_doc=false \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}