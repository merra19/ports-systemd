# description	: Library providing GLib serialization and deserialization for the JSON format
# depends	: glib gobject-introspection

pkgname=json-glib
pkgver=1.10.6
pkgrel=1
options=(!lto)
source=(https://download.gnome.org/sources/json-glib/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}