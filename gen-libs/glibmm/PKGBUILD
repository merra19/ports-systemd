# description	: C++ interface for glib2
# depends	: glib libsigc++-3  libxslt

pkgname=glibmm
pkgver=2.84.0
pkgrel=1
source=(https://download.gnome.org/sources/glibmm/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        bld
	ninja -C bld
    DESTDIR="$pkgdir" ninja install -C bld
}
