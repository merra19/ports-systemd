# description	: Apache Portable Runtime Library
# depends	: util-linux

pkgname=apr
pkgver=1.7.6
pkgrel=1
source=(https://archive.apache.org/dist/apr/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static \
        --with-installbuilddir=/usr/share/apr-1/build
    make
    make DESTDIR="$pkgdir" install
}