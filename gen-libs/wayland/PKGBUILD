# description	: Wayland protocol libraries
# depends	: libffi meson libxml2 docbook-xml docbook-xsl-nons
# depends	: libxslt

pkgname=wayland
pkgver=1.24.0
pkgrel=1
source=(https://gitlab.freedesktop.org/wayland/wayland/-/releases/$pkgver/downloads/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D documentation=false \
        -D scanner=true \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}