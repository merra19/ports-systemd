# description	: D-Bus bindings for glib
# depends	: dbus glib expat

pkgname=dbus-glib
pkgver=0.114
pkgrel=1
source=(http://dbus.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
		--sysconfdir=/etc \
		--disable-static
	make
    make DESTDIR="$pkgdir" install
}
