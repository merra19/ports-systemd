# description	: GNU utility to convert program --help output to a man page
# depends	: perl

pkgname=help2man
pkgver=1.49.3
pkgrel=1
options=(!lto)
source=(https://mirror.lyrahosting.com/gnu/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}