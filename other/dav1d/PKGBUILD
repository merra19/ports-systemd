# description	: dav1d is an AV1 Decoder :)
# depends	: meson nasm

pkgname=dav1d
pkgver=1.5.1
pkgrel=1
source=(https://code.videolan.org/videolan/dav1d/-/archive/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D enable_tests=false \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
