# description	: Murrine GTK+2 Cairo Engine
# depends	: gtk2 glib gdk-pixbuf cairo pango pixman intltool

pkgname=gtk-engine-murrine
pkgver=0.98.2
pkgrel=1
source=(https://ftp.gnome.org/pub/GNOME/sources/murrine/${pkgver%.*}/murrine-$pkgver.tar.xz
        fix-crasher.patch)

build() {   
    cd murrine-$pkgver

    patch -Np1 -i ../fix-crasher.patch

    export CFLAGS="$CFLAGS -Wno-implicit-function-declaration"

    ./configure \
        --prefix=/usr \
        --enable-animation \
        --enable-animationrtl
    make
    make DESTDIR="$pkgdir" install
}