# description	: Extracts files from Microsoft cabinet archive files
# depends	: glibc perl

pkgname=libmspack
pkgver=1.11
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/kyz/libmspack/archive/refs/tags/v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver
	
	cd libmspack
	sed -i "s/@VERSION@/$pkgver/" libmspack.pc.in

	autoreconf -fiv

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--disable-static
	make
    make DESTDIR="$pkgdir" install
}
