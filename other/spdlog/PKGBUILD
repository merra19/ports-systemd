# description :	Fast C++ logging library
# depends	: cmake fmt

pkgname=spdlog
pkgver=1.15.1
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/gabime/spdlog/archive/v$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

    cmake -B build \
        -D SPDLOG_BUILD_BENCH=OFF \
        -D SPDLOG_FMT_EXTERNAL=ON \
        -D SPDLOG_BUILD_SHARED=ON \
        -D SPDLOG_BUILD_TESTS=ON \
        -D CMAKE_BUILD_TYPE=None \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_INSTALL_LIBDIR=lib \
        -D SPDLOG_BUILD_TESTS=OFF \
        -Wno-dev
    cmake --build build
    DESTDIR="$pkgdir" cmake --install build
}