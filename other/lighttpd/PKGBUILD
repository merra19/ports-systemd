# description	: Lightweight high-performance web server
# depends	: glibc brotli lua nettle nss pcre2 php openssl libxml2
# depends	: libunwind sqlite attr zlib zstd libxcrypt mariadb 
 
pkgname=lighttpd
pkgver=1.4.81
pkgrel=1
options=(!lto)
source=(https://download.lighttpd.net/lighttpd/releases-${pkgver%.*}.x/$pkgname-$pkgver.tar.xz
        lighttpd.conf $pkgname.hooks)
backup=(etc/lighttpd/lighttpd.conf)

build() {
	cd $pkgname-$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D with_xattr=true \
        -D with_brotli=enabled \
        -D with_dbi=enabled \
        -D with_krb5=disabled \
        -D with_ldap=disabled \
        -D with_lua=true \
        -D with_maxminddb=enabled \
        -D with_mysql=enabled \
        -D with_openssl=true \
        -D with_pcre2=true \
        -D with_webdav_props=enabled \
        -D with_webdav_locks=enabled \
        -D with_dbi=disabled \
        -D with_maxminddb=disabled \
        p11-build
    ninja -C p11-build
    DESTDIR="$pkgdir" ninja install -C p11-build

	install -D -m644 "$srcdir"/lighttpd.conf "$pkgdir"/etc/lighttpd/lighttpd.conf
	install -d -m700 -o 49 -g 49 "$pkgdir"/var/{log,cache}/lighttpd/

    install --directory --mode=0755 --owner=lighttpd --group=lighttpd "$pkgdir"/var/cache/lighttpd

	install -D -m644 -t "${pkgdir}"/usr/lib/systemd/system/ ${pkgname}1.4/doc/systemd/lighttpd.service
	install -D -m644 -t "${pkgdir}"/usr/lib/systemd/system/ ${pkgname}1.4/doc/systemd/lighttpd-{http,https}-{ipv4,ipv6}.socket

	pushd doc/config >/dev/null
	find . -type f ! -name 'Makefile*' -exec install -D -m644 {} "$pkgdir"/usr/share/doc/lighttpd/config/{} \;
	popd >/dev/null

    install -Dm755 "$srcdir"/$pkgname.hooks "$pkgdir"/usr/share/blfs-bootscripts/hooks/$pkgname.hooks
}