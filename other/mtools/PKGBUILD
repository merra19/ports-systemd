# description	: Utilities to access MS-DOS disks from Unix without mounting them
# depends	: glibc xz

pkgname=mtools
pkgver=4.0.49
pkgrel=1
source=(ftp://ftp.gnu.org/gnu/mtools/$pkgname-$pkgver.tar.bz2)
backup=(etc/$pkgname.conf)

build() {
	cd $pkgname-$pkgver

	./configure \
		--prefix=/usr \
	    --sysconfdir=/etc \
	    --disable-floppyd
	make
	make -j1 prefix=$pkgdir/usr install

	install -Dm 644 mtools.conf "$pkgdir"/etc/mtools.conf
	sed -i -e '/^SAMPLE FILE$/s:^:#:' "$pkgdir"/etc/mtools.conf
}