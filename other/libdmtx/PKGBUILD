# description	: Barcode data matrix reading and writing library
# depends	: glibc

pkgname=libdmtx
pkgver=0.7.8
pkgrel=1
source=(https://github.com/dmtx/libdmtx/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

 build() {
	cd $pkgname-$pkgver

	./autogen.sh
    
	./configure \
        --prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}