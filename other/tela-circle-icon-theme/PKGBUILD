# description	: A flat colorful design icon theme 
# depends	: glibc

pkgname=tela-circle-icon-theme
pkgver=2025_02_10
_pkgver="${pkgver//_/-}"
pkgrel=1
options=(!strip)
source=($pkgname-$pkgver.tar.gz::https://github.com/vinceliuice/Tela-circle-icon-theme/archive/$_pkgver.tar.gz
        do_not_generate_cache_files.patch)

build() {
    cd Tela-circle-icon-theme-$_pkgver

    patch -Np1 -i ../do_not_generate_cache_files.patch

    install -d "$pkgdir"/usr/share/themes

    for i in standard black dracula nord ;do
        ./install.sh -d "$pkgdir"/usr/share/icons $i
    done
}