# description	: An interface for filesystems implemented in userspace
# depends	: glibc pkgconf

pkgname=fuse2
pkgver=2.9.9
pkgrel=1
optios=(!lto)
source=(https://github.com/libfuse/libfuse/releases/download/fuse-$pkgver/fuse-$pkgver.tar.gz
        conditionally-define-closefrom.patch)

build() {
	cd fuse-$pkgver

	patch -Np1 -i ../conditionally-define-closefrom.patch

	autoreconf -vfi  -I /usr/share/gettext/m4

    UDEV_RULES_PATH=/usr/lib/udev/rules.d MOUNT_FUSE_PATH=/usr/bin \
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-lib \
		--enable-util \
		--disable-example
    make
    make DESTDIR="${pkgdir}" install

    # Remove init script in wrong path
    # Don't add our own for now, as fusectl fs oopses on 2.6.18
    rm -r "${pkgdir}"/etc/init.d

    # static device nodes are handled by udev
    rm -r "${pkgdir}"/dev
}