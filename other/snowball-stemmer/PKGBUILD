# description	: Stemming library supporting several languages
# depends	: glibc perl

pkgname=snowball-stemmer
pkgver=2.2.0
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/snowballstem/snowball/archive/refs/tags/v$pkgver.tar.gz
        dynamiclib.diff)

build() {
	cd ${pkgname%-*}-$pkgver

    patch -Np1 -i ../dynamiclib.diff
    make

	install -Dm644 ./include/libstemmer.h "$pkgdir"/usr/include/libstemmer.h
	install -D ./libstemmer.so.0 "$pkgdir"/usr/lib/libstemmer.so.0.0.0
	ln -s libstemmer.so.0.0.0 "$pkgdir"/usr/lib/libstemmer.so.0
	ln -s libstemmer.so.0 "$pkgdir"/usr/lib/libstemmer.so
}