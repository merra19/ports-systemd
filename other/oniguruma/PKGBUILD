# description	: A regular expressions library
# depends	: glibc

pkgname=oniguruma
pkgver=6.9.10
pkgrel=1
source=(https://github.com/kkos/oniguruma/releases/download/v$pkgver/onig-$pkgver.tar.gz)

build() {
	cd onig-$pkgver

	./configure \
        --prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}