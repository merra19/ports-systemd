# description	: Portable C Audio Library
# depends	: alsa-lib pulseaudio

pkgname=pcaudiolib
pkgver=1.3
pkgrel=1
source=(https://github.com/espeak-ng/pcaudiolib/archive/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

    ./autogen.sh

    ./configure \
        --prefix=/usr \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}