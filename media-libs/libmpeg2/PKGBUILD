# description	: Library for decoding mpeg-2 and mpeg-1 video
# depends	: glibc xorg-proto sdl12-compat xorg-libs

pkgname=libmpeg2
pkgver=0.5.1
pkgrel=1
source=(https://download.videolan.org/contrib/libmpeg2/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver
	
    sed -i 's/static const/static/' libmpeg2/idct_mmx.c &&

	./configure \
        --prefix=/usr \
        --enable-shared \
        --disable-static
	make
    make DESTDIR="$pkgdir" install

    install -v -m755 -d "$pkgdir"/usr/share/doc/$pkgname-$pkgver
    install -v -m644 README doc/libmpeg2.txt \
                        "$pkgdir"/usr/share/doc/$pkgname-$pkgver
}