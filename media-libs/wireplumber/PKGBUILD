# description	: Replacement for pipewire-media-session
# depends	: pipewire glib systemd lua py3-lxml

pkgname=wireplumber
pkgver=0.5.10
pkgrel=1
source=(https://gitlab.freedesktop.org/pipewire/wireplumber/-/archive/$pkgver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D system-lua=true \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build

    mv -v "$pkgdir"/usr/share/doc/wireplumber{,-$pkgver}
}