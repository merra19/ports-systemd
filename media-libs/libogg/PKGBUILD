# description	: The Ogg media file format library
# depends	: glibc

pkgname=libogg
pkgver=1.3.6
pkgrel=1
options=(!lto)
source=(http://downloads.xiph.org/releases/ogg/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	mkdir build &&
	cd    build &&

	../configure \
        --prefix=/usr \
		--disable-static \
		--docdir=/usr/share/doc/$pkgname-$pkgver
	make
    make DESTDIR="$pkgdir" install
}