# description	: FFmpeg based gstreamer plugin
# depends	: gst-plugins-base gstreamer ffmpeg yasm meson

pkgname=gst-libav
pkgver=1.26.5
pkgrel=1
source=(https://gstreamer.freedesktop.org/src/gst-libav/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}