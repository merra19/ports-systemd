# description	: an advanced CDDA reader with error correction
# depends	: libcdio

pkgname=libcdio-paranoia
pkgver=10.2+2.0.2
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/libcdio/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver
	
	./configure \
        --prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}