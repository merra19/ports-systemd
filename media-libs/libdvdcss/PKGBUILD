# description	: A portable abstraction library for DVD decryption
# depends	: glibc

pkgname=libdvdcss
pkgver=1.4.3
pkgrel=1
source=(https://get.videolan.org/libdvdcss/$pkgver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver
	
	./configure \
        --prefix=/usr \
		--disable-static \
		--docdir=/usr/share/doc/$pkgname-$pkgver
	make
    make DESTDIR="$pkgdir" install
}