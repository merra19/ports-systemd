# description	: networked sound server
# depends	: alsa-lib dbus systemd glib libsndfile libxcb speexdsp
# depends	: libcap avahi libsamplerate gtk3 bluez sbc xorg-libs
# depends	: alsa-utils rtkit

pkgname=pulseaudio
pkgver=17.0
pkgrel=1
options=(!lto)
source=(https://www.freedesktop.org/software/pulseaudio/releases/pulseaudio-$pkgver.tar.xz)
backup=(etc/pulse/client.conf etc/pulse/daemon.conf etc/pulse/default.pa etc/pulse/system.pa)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D consolekit=disabled \
		-D database=gdbm \
		-D doxygen=false \
		-D bluez5=disabled \
        -D tests="$(scratch isinstalled check && echo "true" || echo "false")" \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build

    ######################
   
    rm -fv "$pkgdir"/usr/share/dbus-1/system.d/pulseaudio-system.conf
    mkdir -p "$pkgdir"/etc/pulse/default.pa.d

    sed '2i exit # nouse' -i "$pkgdir"/etc/xdg/Xwayland-session.d/00-pulseaudio-x11
    sed '$a Hidden=true'  -i "$pkgdir"/etc/xdg/autostart/pulseaudio.desktop
    sed -e '$a autospawn = no' -i "$pkgdir"/etc/pulse/client.conf
}
