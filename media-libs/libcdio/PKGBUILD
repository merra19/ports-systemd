# description	: A library to encapsulate CD-ROM reading and control
# depends	: ncurses libcddb

pkgname=libcdio
pkgver=2.1.0
pkgrel=1
options=(!lto)
source=(https://mirror.lyrahosting.com/gnu/libcdio/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver
	
    CFLAGS=$(echo "$CFLAGS" | sed 's/-Werror=format-security/-Wformat-security/')
    CXXFLAGS=$(echo "$CXXFLAGS" | sed 's/-Werror=format-security/-Wformat-security/')

	./configure \
        --prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}