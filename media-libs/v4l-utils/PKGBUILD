# description	: v4l-utils libraries and optional utilities
# depends	: glibc qt6 alsa-lib mesa json-c perl elfutils glu systemd
# depends	: libjpeg-turbo

pkgname=v4l-utils
pkgver=1.30.1
pkgrel=1
source=(https://www.linuxtv.org/downloads/v4l-utils/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gconv=disabled \
        -D doxygen-doc=disabled \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build

    for prog in v4l2gl v4l2grab; do
        cp -v build/contrib/test/$prog "$pkgdir"/usr/bin
    done
}