# description	: Free MPEG-4 audio codecs by AudioCoding.com
# depends	: glibc

pkgname=faac
pkgver=1.31.1
pkgrel=1
source=(https://github.com/lfs-book/faac/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver
	
    ./bootstrap 
	./configure \
        --prefix=/usr \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}