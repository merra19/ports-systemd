# description	: WebM VP8 and VP9 Codec SDK
# depends	: yasm which

pkgname=libvpx
pkgver=1.15.2
pkgrel=1
source=($pkgname$pkgver.tar.gz::https://github.com/webmproject/libvpx/archive/v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	sed -i 's/cp -p/cp/' build/make/Makefile &&

	mkdir libvpx-build
	cd    libvpx-build

	../configure \
        --prefix=/usr \
		--enable-shared \
        --enable-pic \
        --disable-unit-tests \
		--disable-static
	make
    make DESTDIR="$pkgdir" install
}