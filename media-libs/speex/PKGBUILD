# description	: Audio compression format designed for speech
# depends	: libogg

pkgname=speex
pkgver=1.2.1
pkgrel=1
source=(https://downloads.xiph.org/releases/speex/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
		--disable-static \
        --enable-sse \
		--docdir=/usr/share/doc/speex-$pkgver
	make
    make DESTDIR="$pkgdir" install
}