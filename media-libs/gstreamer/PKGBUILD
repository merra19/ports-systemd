# description	: Open source multimedia framework
# depends	: glib libcap gobject-introspection meson qt6
# depends	: libunwind elfutils rustc libnsl

pkgname=gstreamer
pkgver=1.26.5
pkgrel=1
source=(http://gstreamer.freedesktop.org/src/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
		-D gst_debug=false \
        -D libunwind=disabled \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}