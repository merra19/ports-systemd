# description	: Tools to deal with shar archives
# depends	: xz texinfo gettext

pkgname=sharutils
pkgver=4.15.2
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/sharutils/$pkgname-$pkgver.tar.xz
        https://www.linuxfromscratch.org/patches/blfs/12.4/sharutils-4.15.2-consolidated-1.patch
        sharutils-4.14.2-Pass-compilation-with-Werror-format-security.patch)

build() {
	cd $pkgname-$pkgver

    # First, fix issues exposed by current GCC versions
    patch -Np1 -i ../sharutils-4.15.2-consolidated-1.patch

    patch -Np1 -i ../sharutils-4.14.2-Pass-compilation-with-Werror-format-security.patch

    autoreconf -fiv 
    ./configure \
        --prefix=/usr \
        --disable-dependency-tracking
    make
    make DESTDIR="$pkgdir" install
}