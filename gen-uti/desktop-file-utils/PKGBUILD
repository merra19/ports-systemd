# description	: Command line utilities to work with desktop menu entries
# depends	: glib meson xz

pkgname=desktop-file-utils
pkgver=0.28
pkgrel=1
source=(https://www.freedesktop.org/software/desktop-file-utils/releases/$pkgname-$pkgver.tar.xz
		$pkgname.hooks)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
	install -vdm755 "$pkgdir"/usr/share/applications

	install -Dm755 "$srcdir"/$pkgname.hooks "$pkgdir"/usr/share/blfs-bootscripts/hooks/$pkgname.hooks
}
