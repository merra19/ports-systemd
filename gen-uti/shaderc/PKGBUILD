# description	: Collection of tools, libraries and tests for shader compilation
# depends	: spirv-tools glslang cmake

pkgname=shaderc
pkgver=2025.3
pkgrel=1
source=(https://github.com/google/shaderc/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

getversionpkg() {
    awk 'NR==1 {print $1}' /var/lib/scratchpkg/db/$1 2>/dev/null
}

build() {
	cd $pkgname-$pkgver

    sed '/build-version/d'   -i glslc/CMakeLists.txt            &&
    sed '/third_party/d'     -i CMakeLists.txt                  &&
    sed 's|SPIRV|glslang/&|' -i libshaderc_util/src/compiler.cc &&

    echo "\"$pkgver\"" > glslc/src/build-version.inc

	cmake -B build -G Ninja \
		-D CMAKE_INSTALL_PREFIX=/usr \
		-D CMAKE_INSTALL_LIBDIR=lib \
		-D CMAKE_BUILD_TYPE=Release \
		-D CMAKE_CXX_FLAGS_RELEASE="${CXXFLAGS}" \
		-D SHADERC_SKIP_TESTS=ON \
		-D glslang_SOURCE_DIR:PATH='/usr/include/glslang' \
		-Wno-dev
	ninja -C build 
    DESTDIR="$pkgdir" ninja install -C build 
}