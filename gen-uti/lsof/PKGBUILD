# description	: Lists open files for running Unix processes
# depends	: groff libtirpc

pkgname=lsof
pkgver=4.99.5
pkgrel=1
source=(https://github.com/lsof-org/lsof/releases/download/$pkgver/lsof-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr  \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}