# description	: GTK+ Documentation Generator
# depends	: docbook-xml docbook-xsl-nons py3-lxml libxslt itstool
# depends	: py3-pygments glib which

pkgname=gtk-doc
pkgver=1.34.0
pkgrel=1
source=(https://download.gnome.org/sources/gtk-doc/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
KEEP_DOC="yes"

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}