# description	: Public client interface for NIS(YP) in a IPv6 ready version
# depends	: libtirpc-32 libnsl

pkgname=libnsl-32
_pkgname=libnsl
pkgver=2.0.1
pkgrel=1
options=(!lto)
source=(https://github.com/thkukuk/libnsl/releases/download/v$pkgver/$_pkgname-$pkgver.tar.xz)

build() {
	cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

	./configure \
        --prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib32 \
		--disable-static \
		--host=i686-pc-linux-gnu
	make
    make DESTDIR=$PWD/DESTDIR install
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}