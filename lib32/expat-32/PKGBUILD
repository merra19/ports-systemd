# description	: Stream-oriented XML parser library
# depends	: expat

pkgname=expat-32
_pkgname=expat
pkgver=2.7.1
_pkgver=${pkgver//./_}
pkgrel=1
source=(https://github.com/libexpat/libexpat/releases/download/R_$_pkgver/expat-$pkgver.tar.xz)

build() {
    cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    ./configure \
        --prefix=/usr \
        --disable-static \
        --libdir=/usr/lib32 \
        --host=i686-pc-linux-gnu \
        DOCBOOK_TO_MAN="xmlto man --skip-validation"
    make
    
    mkdir -p "$pkgdir"/usr/lib32
    make DESTDIR=$PWD/DESTDIR install
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}