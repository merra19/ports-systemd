# description	: The GL Vendor-Neutral Dispatch library
# depends	: xorg-libs-32 libglvnd

pkgname=libglvnd-32
_pkgname=libglvnd
pkgver=1.7.0
pkgrel=1
source=(https://gitlab.freedesktop.org/glvnd/libglvnd/-/archive/v$pkgver/libglvnd-v$pkgver.tar.gz
        0001-glx-Add-another-fallback-library-name.patch)

build() {
    cd ${_pkgname}-v$pkgver

    # https://src.fedoraproject.org/rpms/libglvnd
	patch -Np1 -i ../0001-glx-Add-another-fallback-library-name.patch

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        -D gles1=false \
        build32
	ninja -C build32
    DESTDIR="$PWD"/DESTDIR ninja install -C build32
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}