# description	: Extended crypt library for descrypt, md5crypt, bcrypt, and others
# depends	: libxcrypt

pkgname=libxcrypt-32
_pkgname=libxcrypt
pkgver=4.4.38
pkgrel=1
source=(https://github.com/besser82/libxcrypt/releases/download/v$pkgver/${_pkgname}-$pkgver.tar.xz)

build() {
    cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    mkdir build build2

    cd build

    ../configure \
        --prefix=/usr \
        --libdir=/usr/lib32 \
        --disable-werror \
        --enable-hashes=strong,glibc \
        --enable-obsolete-api=no \
        --disable-static \
        --disable-failure-tokens \
        --host=i686-pc-linux-gnu
    make

    mkdir -p "$pkgdir"/usr/lib32
    cp -av .libs/libcrypt.so* "$pkgdir"/usr/lib32/
    make DESTDIR="$pkgdir" install-pkgconfigDATA
    ln -svf libxcrypt.pc "$pkgdir"/usr/lib32/pkgconfig/libcrypt.pc

    cd ../build2

    ../configure \
        --prefix=/usr \
        --libdir=/usr/lib32 \
        --disable-werror \
        --enable-hashes=strong,glibc \
        --enable-obsolete-api=glibc \
        --disable-static \
        --disable-failure-tokens \
        --host=i686-pc-linux-gnu
    make 

    cp -av --remove-destination .libs/libcrypt.so.1* "$pkgdir"/usr/lib32
}