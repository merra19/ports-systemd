# description	: X.Org libdrm library
# depends	: xorg-libs-32 libdrm

pkgname=libdrm-32
_pkgname=libdrm
pkgver=2.4.125
pkgrel=1
source=(https://dri.freedesktop.org/libdrm/${_pkgname}-$pkgver.tar.xz)

build() {
    cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        -D udev=true \
        -D valgrind=disabled \
        -D cairo-tests=disabled \
        build32
	ninja -C build32
    DESTDIR="$PWD"/DESTDIR ninja install -C build32
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}