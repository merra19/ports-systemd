# description	: C library for the Public Suffix List
# depends	: libidn2-32 libunistring-32 icu-32 libpsl

pkgname=libpsl-32
_pkgname=libpsl
pkgver=0.21.5
pkgrel=1
options=(!lto)
source=(https://github.com/rockdaboot/libpsl/releases/download/$pkgver/libpsl-$pkgver.tar.gz)

build() {
	cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
    export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        build
	ninja -C build
    DESTDIR="$PWD"/DESTDIR ninja install -C build
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}