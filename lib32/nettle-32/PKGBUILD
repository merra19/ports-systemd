# description	: Low-level cryptographic library
# depends	: libgmp-32 nettle

pkgname=nettle-32
_pkgname=nettle
pkgver=3.10.2
pkgrel=1
source=(https://mirror.lyrahosting.com/gnu/$_pkgname/$_pkgname-$pkgver.tar.gz)

build() {
	cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

	./configure \
        --prefix=/usr \
        --libdir=/usr/lib32 \
		--disable-static
	make
	make DESTDIR=$PWD/DESTDIR install

	mkdir -p "$pkgdir"/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32

    chmod -v 755 "$pkgdir"/usr/lib32/lib{hogweed,nettle}.so
}