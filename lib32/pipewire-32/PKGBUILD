# description	: Multimedia processing graphs
# depends	: ncurses-32 dbus-32 readline-32 openssl-32 alsa-lib-32
# depends	: opus-32 pulseaudio-32 xorg-libs-32 libxcb-32 libdrm-32
# depends	: alsa-plugins-32 vulkan-loader-32 libsndfile-32 pipewire

pkgname=pipewire-32
_pkgname=pipewire
pkgver=1.4.7
pkgrel=1
options=(!lto)
source=(https://gitlab.freedesktop.org/pipewire/pipewire/-/archive/$pkgver/$_pkgname-$pkgver.tar.bz2)

build() {
	cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
    export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        --cross-file lib32 \
        -D session-managers="[]" \
        build
	ninja -C build
    DESTDIR=$PWD/DESTDIR ninja install -C build

	mkdir -p "$pkgdir"/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}
