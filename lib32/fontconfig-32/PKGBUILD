# description	: A library for configuring and customizing font access
# depends	: freetype-32 expat-32 json-c-32 libxml2-32 fontconfig 

pkgname=fontconfig-32
_pkgname=fontconfig
pkgver=2.17.1
pkgrel=1
source=(https://gitlab.freedesktop.org/api/v4/projects/890/packages/generic/fontconfig/$pkgver/$_pkgname-$pkgver.tar.xz)

build() {
    cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    autoreconf -fiv
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libdir=/usr/lib32 \
        --localstatedir=/var \
		--disable-docs \
        --host=i686-pc-linux-gnu
    make
    make DESTDIR="$PWD"/DESTDIR install
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}