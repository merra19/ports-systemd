# description	: An OpenType text shaping engine
# depends	: glib-32 icu-32 freetype-32 graphite2-32 cairo-32
# depends	: harfbuzz

pkgname=harfbuzz-32
_pkgname=harfbuzz
pkgver=11.4.1
pkgrel=1
source=(https://github.com/harfbuzz/harfbuzz/releases/download/$pkgver/$_pkgname-$pkgver.tar.xz)

build() {
    cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

    # Harfbuzz wants no exceptions
    CFLAGS="$CFLAGS -fno-exceptions"
    CXXFLAGS="$CXXFLAGS -fno-exceptions"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        -D docs=disabled \
        -D cpp_std=c++17 \
        -D graphite2=disabled \
        -D cairo=enabled \
        -D introspection=disabled \
        build
	ninja -C build
    DESTDIR="$PWD"/DESTDIR ninja install -C build
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}