# description	: Console display library
# depends	: ncurses

pkgname=ncurses-32
_pkgname=ncurses
pkgver=6.5_20250809
_pkgver=${pkgver/_/-}
pkgrel=1
source=(https://invisible-mirror.net/archives/ncurses/current/${_pkgname}-${_pkgver}.tgz)

build() {
    cd ${_pkgname}-${_pkgver}

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    echo $CFLAGS

    ./configure \
        --prefix=/usr \
        --libdir=/usr/lib32 \
        --host=i686-pc-linux-gnu \
        --mandir=/usr/share/man \
        --with-shared \
        --without-debug \
        --without-normal \
        --with-cxx-shared \
        --enable-pc-files \
        --with-pkg-config-libdir=/usr/lib32/pkgconfig \
        --enable-widec 
    make

    local _pkgver=${_pkgver/-*/}

    make DESTDIR=$PWD/DESTDIR install
    mkdir -p "$pkgdir"/usr/lib32/pkgconfig
    install -vm755 DESTDIR/usr/lib32/libncursesw.so.$_pkgver "$pkgdir"/usr/lib32
    rm -v  DESTDIR/usr/lib32/libncursesw.so.$_pkgver
    cp -av DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32/

    for lib in ncurses form panel menu ; do
        ln -sfv lib${lib}w.so "$pkgdir"/usr/lib32/lib${lib}.so
        ln -sfv ${lib}w.pc    "$pkgdir"/usr/lib32/pkgconfig/${lib}.pc
    done

    ln -sfv libncursesw.so "$pkgdir"/usr/lib32/libcurses.so
}