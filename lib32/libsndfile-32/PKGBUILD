# description	: C library for reading and writing files containing sampled sound
# depends	: opus-32 alsa-lib-32 sqlite-32 libogg-32 speexdsp-32
# depends	: libsndfile

pkgname=libsndfile-32
_pkgname=libsndfile
pkgver=1.2.2
pkgrel=1
source=(https://github.com/libsndfile/libsndfile/releases/download/$pkgver/${_pkgname}-$pkgver.tar.xz)

build() {
	cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	# Fix building with GCC-15
	sed '/typedef enum/,/bool ;/d' -i \
	src/ALAC/alac_{en,de}coder.c

    ./configure \
        --prefix=/usr \
        --libdir=/usr/lib32 \
        --host=i686-pc-linux-gnu
    make
    
    mkdir -p "$pkgdir"/usr/lib32
    make DESTDIR=$PWD/DESTDIR install
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}