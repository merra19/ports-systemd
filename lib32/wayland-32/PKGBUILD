# description	: Wayland protocol libraries
# depends	: libffi-32 libxml2-32 wayland

pkgname=wayland-32
_pkgname=wayland
pkgver=1.24.0
pkgrel=1
source=(https://gitlab.freedesktop.org/wayland/wayland/-/releases/$pkgver/downloads/${_pkgname}-$pkgver.tar.xz)

build() {
    cd ${_pkgname}-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        -D documentation=false \
        build32
	ninja -C build32
    DESTDIR="$PWD"/DESTDIR ninja install -C build32
    rm -fr DESTDIR/usr/{bin,share,include}
    cp -Rv DESTDIR/* "$pkgdir"/
}