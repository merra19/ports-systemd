# description	: Portable Network Graphics library
# depends	: zlib-32 libpng

pkgname=libpng-32
_pkgname=libpng
pkgver=1.6.50
pkgrel=1
source=(https://downloads.sourceforge.net/libpng/${_pkgname}-$pkgver.tar.xz
        https://downloads.sourceforge.net/sourceforge/libpng-apng/libpng-$pkgver-apng.patch.gz)
noextract=(${_pkgname}-$pkgver-apng.patch.gz)

build() {
    cd ${_pkgname}-$pkgver
    
    gzip -cd ../libpng-$pkgver-apng.patch.gz | patch -p1

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    ./configure \
        --prefix=/usr \
        --disable-static \
        --enable-intel-sse \
        --enable-hardware-optimizations \
        --libdir=/usr/lib32 \
        --host=i686-pc-linux-gnu
    make
    make DESTDIR=$PWD/DESTDIR install
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32

    ## Remove excluded files
    rm -f "$pkgdir"/usr/lib32/libpng.la
}