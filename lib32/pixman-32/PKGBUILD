# description	: Low-level pixel manipulation routines
# depends	: libpng-32 pixman

pkgname=pixman-32
_pkgname=pixman
pkgver=0.46.4
pkgrel=1
options=(!lto)
source=(https://www.cairographics.org/releases/$_pkgname-$pkgver.tar.gz)

build() {
    cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        -D tests=disabled \
        -D demos=disabled \
        build
	ninja -C build
    DESTDIR=$PWD/DESTDIR ninja install -C build

	mkdir -p "$pkgdir"/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}