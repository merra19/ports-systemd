# description	: A secure communications library implementing the SSL, TLS and DTLS protocols
# depends	: nettle-32 libtasn1-32 p11-kit-32 libunistring-32
# depends	: libidn2-32 libgmp-32 zlib-32 zstd-32 brotli-32 gnutls

pkgname=gnutls-32
_pkgname=gnutls
pkgver=3.8.10
pkgrel=1
options=(!lto)
source=(https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/$_pkgname-$pkgver.tar.xz)

build() {
	cd $_pkgname-$pkgver

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

	./configure \
        --prefix=/usr \
		--libdir=/usr/lib32 \
		--with-default-trust-store-pkcs11="pkcs11:" \
        --with-seccomp-tests 
	make
    make DESTDIR="$PWD"/DESTDIR install
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}