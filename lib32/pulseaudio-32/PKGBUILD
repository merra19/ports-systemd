# description	: (networked sound server
# depends	: alsa-lib-32 dbus-32 systemd-32 glib-32 libsndfile-32 
# depends	: xorg-libs-32 libxcb-32 speexdsp-32 libcap-32
# depends	: libsamplerate-32 pulseaudio

pkgname=pulseaudio-32
_pkgname=pulseaudio
pkgver=17.0
pkgrel=1
options=(!lto)
source=(https://www.freedesktop.org/software/pulseaudio/releases/${_pkgname}-$pkgver.tar.xz)

build() {
	cd ${_pkgname}-$pkgver

	# disable autospawn by client
	sed -i -e 's:; autospawn = yes:autospawn = no:g' src/pulse/client.conf.in 

	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
    export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --libdir=/usr/lib32 \
        --cross-file lib32 \
		-D database=gdbm \
		-D doxygen=false \
		-D bluez5=disabled \
        -D cpp_std=gnu++17 \
        -D avahi=disabled \
        -D bashcompletiondir=no \
        -D bluez5-gstreamer=disabled \
        -D bluez5=disabled \
        -D consolekit=disabled \
        -D daemon=false \
        -D doxygen=false \
        -D fftw=disabled \
        -D gstreamer=disabled \
        -D jack=disabled \
        -D lirc=disabled \
        -D man=false \
        -D tests=false \
        -D elogind=disabled \
        build32
	ninja -C build32
	DESTDIR="$PWD"/DESTDIR ninja install -C build32
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}