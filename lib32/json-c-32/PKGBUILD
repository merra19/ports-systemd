# description	: A JSON implementation in C
# depends	: json-c

pkgname=json-c-32
_pkgname=json-c
pkgver=0.18
pkgrel=1
source=(https://s3.amazonaws.com/json-c_releases/releases/${_pkgname}-$pkgver.tar.gz)

build() {
	cd ${_pkgname}-$pkgver

    #  Fix building this package with CMake-4.0
    sed -i 's/VERSION 2.8/VERSION 4.0/' apps/CMakeLists.txt  &&
    sed -i 's/VERSION 3.9/VERSION 4.0/' tests/CMakeLists.txt
    
	export CC="gcc -m32 -mstackrealign"
	export CXX="g++ -m32 -mstackrealign"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"

    PKG_CONFIG=i686-pc-linux-gnu-pkg-config \
    cmake -B build32 \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_INSTALL_LIBDIR=/usr/lib32 \
        -D CMAKE_BUILD_TYPE=Release \
        -D BUILD_STATIC_LIBS=OFF
    make -C build32
    make DESTDIR=$PWD/DESTDIR install -C build32
    mkdir -p "$pkgdir"/usr/lib32
    cp -Rv DESTDIR/usr/lib32/* "$pkgdir"/usr/lib32
}