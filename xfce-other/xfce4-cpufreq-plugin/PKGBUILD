# description	: A panel plugin for showing information about cpufreq settings
# depends	: xfce4-panel meson xfce4-dev-tools xfconf

pkgname=xfce4-cpufreq-plugin
pkgver=1.3.0
pkgrel=1
source=(https://archive.xfce.org/src/panel-plugins/xfce4-cpufreq-plugin/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
