# description	: A battery monitor panel plugin for the Xfce desktop environment
# depends	: xfce4-panel meson xfce4-dev-tools

pkgname=xfce4-battery-plugin
pkgver=1.2.0
pkgrel=1
source=(https://archive.xfce.org/src/panel-plugins/xfce4-battery-plugin/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
