# description	: Alternate application launcher for Xfce
# depends	: accountsservice garcon gtk-layer-shell gtk3 meson ninja
# depends	: xfce4-panel
# todo      : mugshot

pkgname=xfce4-whiskermenu-plugin
pkgver=2.10.0
pkgrel=1
source=(https://archive.xfce.org/src/panel-plugins/xfce4-whiskermenu-plugin/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}


