# description	: Xfce4 screenshooter application and panel plugin
# depends	: xfce4-panel hicolor-icon-theme wayland-protocols glib
# depends	: xfce4-dev-tools 

pkgname=xfce4-screenshooter
pkgver=1.11.2
pkgrel=1
source=(https://archive.xfce.org/src/apps/xfce4-screenshooter/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    NOCONFIGURE=1 ./autogen.sh

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/lib \
        --localstatedir=/var \
        --disable-debug
    make
    make DESTDIR="$pkgdir" install
}
