# description	: A dict.org querying application and panel plug-in for the Xfce desktop
# depends	: hicolor-icon-theme librsvg xfce4-panel glib meson
# depends	: xfce4-dev-tools

pkgname=xfce4-dict
pkgver=0.8.9
pkgrel=1
source=(https://archive.xfce.org/src/apps/xfce4-dict/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}

