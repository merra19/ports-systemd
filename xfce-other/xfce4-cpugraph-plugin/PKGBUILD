# description	: A system load plug-in for the Xfce panel
# depends	: xfce4-panel meson xfce4-dev-tools

pkgname=xfce4-cpugraph-plugin
pkgver=1.3.0
pkgrel=1
source=(https://archive.xfce.org/src/panel-plugins/xfce4-cpugraph-plugin/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
