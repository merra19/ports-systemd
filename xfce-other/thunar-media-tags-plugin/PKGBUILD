# description	: Adds special features for media files to the Thunar File Manager
# depends	: taglib thunar meson xfce4-dev-tools

pkgname=thunar-media-tags-plugin
pkgver=0.6.0
pkgrel=1
source=(https://archive.xfce.org/src/thunar-plugins/thunar-media-tags-plugin/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}

