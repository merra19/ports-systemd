# description	: Allows users or groups to run commands as other users
# depends	: zlib pam openssl libxcrypt
# optional  : openldap

pkgname=sudo
pkgver=1.9.17p2
pkgrel=1
source=(https://www.sudo.ws/dist/sudo-$pkgver.tar.gz
        00-sudo sudo)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --libexecdir=/usr/lib \
        --with-secure-path \
        --with-env-editor \
        --docdir=/usr/share/doc/$pkgname-$pkgver \
        --with-passprompt="[sudo] password for %p: " &&
    make
    mkdir -p "$pkgdir"/etc/pam.d

    make DESTDIR="$pkgdir" install

    install -Dm 644 ../00-sudo "$pkgdir"/etc/sudoers.d/00-sudo
    install -Dm 644 ../sudo "$pkgdir"/etc/pam.d/sudo
    install -dm 755 "$pkgdir"/etc/sudoers.d/
}
