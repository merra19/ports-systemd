# description	: GnuPG Made Easy is a library for making GnuPG easier to use (C++ bindings)
# depends	: gcc glibc gpgme cmake

pkgname=gpgmepp
pkgver=2.0.0
pkgrel=1
options=(!lto)
source=(https://www.gnupg.org/ftp/gcrypt/gpgmepp/$pkgname-$pkgver.tar.xz)

build() {
    cmake -B build -S $pkgname-$pkgver \
        -DCMAKE_INSTALL_PREFIX=/usr
    make -C build
    DESTDIR="$pkgdir" make install -C build
}

