# description	: Library for developing printing features, split out of cups-filters
# depends	: cups glib mupdf lcms2 poppler qpdf libjpeg-turbo libpng
# depends	: libexif libtiff ttf-dejavu ghostscript dbus gettext

pkgname=libcupsfilters
pkgver=2.1.1
pkgrel=1
source=(https://github.com/OpenPrinting/libcupsfilters/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/$pkgname-$pkgver
    make
    make DESTDIR="$pkgdir" install
}