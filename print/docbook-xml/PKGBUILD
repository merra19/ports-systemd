# description	: Document type definitions for verification of XML data files against the DocBook rule set
# depends	: libxml2 libarchive

pkgname=docbook-xml
pkgver=4.5
pkgrel=1
source=(https://www.docbook.org/xml/$pkgver/$pkgname-$pkgver.zip)

build() {
    install -v -d -m755 "${pkgdir}"/usr/share/xml/docbook/xml-dtd-$pkgver
    install -v -d -m755 "${pkgdir}"/etc/xml
    cp -v -af --no-preserve=ownership docbook.cat *.dtd ent/ *.mod \
        "${pkgdir}"/usr/share/xml/docbook/xml-dtd-$pkgver
}
