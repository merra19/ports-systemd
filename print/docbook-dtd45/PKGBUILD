# description	: DTD Stylesheets for DocBook
# depends	: sgml-common libarchive

pkgname=docbook-dtd45
pkgver=45
_version=4.5
pkgrel=1
source=(https://www.docbook.org/sgml/$_version/docbook-$_version.zip)

build() {
    sed -i -e '/ISO 8879/d' \
        -e '/gml/d' docbook.cat

    install -dm 755 "$pkgdir"/etc/sgml/
    install -v -d -m755 "$pkgdir"/usr/share/sgml/docbook/sgml-dtd-${_version} &&
    chown -R root:root . &&

    install -v docbook.cat "$pkgdir"/usr/share/sgml/docbook/sgml-dtd-${_version}/catalog &&
    cp -v -af *.dtd *.mod *.dcl "$pkgdir"/usr/share/sgml/docbook/sgml-dtd-${_version}
}
