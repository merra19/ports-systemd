# description	: A Doxygen filter for python
# depends	: python py3-wheel py3-gpep517 py3-setuptools 
# depends	: py3-flit-core py3-chardet doxygen

pkgname=py3-doxypypy
pkgver=0.8.8.7
pkgrel=1
source=(https://files.pythonhosted.org/packages/source/d/doxypypy/doxypypy-$pkgver.tar.gz)

build() {
    cd ${pkgname#*-}-$pkgver
    
    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}