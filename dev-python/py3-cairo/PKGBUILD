# description	: Python bindings for the cairo library
# depends	: python cairo

pkgname=py3-cairo
pkgver=1.28.0
pkgrel=1
source=(https://github.com/pygobject/pycairo/releases/download/v$pkgver/pycairo-$pkgver.tar.gz)

build() {
	cd pycairo-$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}