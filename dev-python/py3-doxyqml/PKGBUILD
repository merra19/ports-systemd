# description	: A Doxygen filter for python
# depends	: python py3-wheel py3-gpep517 py3-setuptools 
# depends	: py3-flit-core doxygen

pkgname=py3-doxyqml
pkgver=0.5.3
pkgrel=1
source=(https://files.pythonhosted.org/packages/source/d/doxyqml/doxyqml-$pkgver.tar.gz)

build() {
    cd ${pkgname#*-}-$pkgver
    
    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}