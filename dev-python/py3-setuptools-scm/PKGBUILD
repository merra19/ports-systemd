# description	: Manage versions by scm tags via setuptools
# depends	: python py3-gpep517 py3-setuptools py3-wheel
# depends	: py3-packaging py3-typing_extensions

pkgname=py3-setuptools-scm
pkgver=8.3.1
pkgrel=1
source=(https://files.pythonhosted.org/packages/source/s/setuptools_scm/setuptools_scm-$pkgver.tar.gz)

build() {
	cd setuptools_scm-$pkgver

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
    python3 -m installer -d "$pkgdir" .dist/*.whl
}