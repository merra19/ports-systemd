# description	: Internationalized Domain Names in Applications (IDNA)
# depends	: python py3-gpep517 py3-setuptools py3-wheel 
# depends	: py3-flit-core

pkgname=py3-idna
pkgver=3.10
pkgrel=1
options=(!lto)
source=(https://files.pythonhosted.org/packages/source/i/idna/idna-$pkgver.tar.gz)

build() {
    cd ${pkgname#*-}-$pkgver

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/idna-$pkgver-py3-none-any.whl
}