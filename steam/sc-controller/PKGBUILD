# description	: User-mode driver and GTK-based GUI for Steam Controllers and others
# depends	: python python py3-gpep517 py3-setuptools py3-wheel 
# depends	: py3-evdev py3-gobject py3-vdf py3-cairo py3-libusb1
# depends	: py3-pylibacl py3-ioctl-opt gtk3 gtk-layer-shell
# depends	: xorg-applications

pkgname=sc-controller
pkgver=0.5.4
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/C0rn3j/sc-controller/archive/refs/tags/v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}