# description	: Installer, launcher and supplementary files for Valve's Steam client
# depends	: glibc xorg-proto xcb-proto libxau libdrm xz icu mesa
# depends	: xdg-user-dirs lsof tar bash fontconfig xorg-libs python
# depends	: libglvnd ttf-dejavu at-spi2-core bzip2 ibus gcc make-ca
# depends	: libxau-32 libdrm-32 bzip2-32 xorg-libs-32 libxcrypt-32 
# depends	: icu-32 fontconfig-32 mesa-32 libglvnd-32 zenity freetype
# depends	: coreutils curl dbus desktop-file-utils diffutils nss
# depends	: hicolor-icon-theme libxcrypt libxkbcommon systemd-32
# depends	: usbutils polkit xdg-desktop-portal-gtk noto-fonts
# depends	: libva-32 vulkan-loader cairo-32 libgpg-error-32 nss-32
# depends	: alsa-plugins-32 pipewire-32 xorg-applications

pkgname=steam
pkgver=1.0.0.84
pkgrel=1
source=(http://repo.steampowered.com/$pkgname/pool/$pkgname/s/$pkgname/${pkgname}_$pkgver.tar.gz)

build() {
	cd $pkgname-launcher

	make DESTDIR="$pkgdir" install

	# blank steamdeps because apt-get
	ln -sf /bin/true "$pkgdir"/usr/bin/steamdeps
}