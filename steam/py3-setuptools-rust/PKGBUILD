# description	: A plugin for setuptools to build Rust Python extensions
# depends	: python py3-gpep517 py3-setuptools py3-setuptools-scm
# depends	: py3-wheel

pkgname=py3-setuptools-rust
pkgver=1.12.0
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/PyO3/setuptools-rust/archive/refs/tags/v$pkgver.tar.gz)

build() {
	cd setuptools-rust-$pkgver

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}