# description	: Linux's ioctl.h for Python
# depends	: python py3-gpep517 py3-setuptools py3-wheel

pkgname=py3-ioctl-opt
pkgver=1.3
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/vpelletier/python-ioctl-opt/archive/$pkgver.tar.gz)

build() {
	cd python-ioctl-opt-$pkgver
	
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}