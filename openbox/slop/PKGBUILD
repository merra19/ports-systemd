# description	: Application that queries the user for a selection for printing
# depends	: xorg-proto xorg-libs icu glm cmake

pkgname=slop
pkgver=7.7
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/naelstrof/slop/archive/v$pkgver.tar.gz)

build() { 
    cd $pkgname-$pkgver

    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_BUILD_TYPE=Release \
        -D SLOP_OPENGL=OFF \
        -D SLOP_UNICODE=ON \
        -D CMAKE_POLICY_VERSION_MINIMUM=3.5
    make -C build
    make DESTDIR="$pkgdir" install -C build
}
