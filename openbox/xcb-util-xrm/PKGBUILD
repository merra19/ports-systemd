# description	: X C-language Bindings sample implementations
# depends	: libxcb xcb-util xorg-proto xorg-libs

pkgname=xcb-util-xrm
pkgver=1.3
pkgrel=1
source=(https://github.com/Airblader/xcb-util-xrm/releases/download/v$pkgver/$pkgname-$pkgver.tar.bz2)

build() { 
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}
