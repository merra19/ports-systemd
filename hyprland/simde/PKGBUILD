# description	: Implementations of SIMD instruction sets
# depends	: meson

pkgname=simde
pkgver=0.8.2
pkgrel=1
source=(https://github.com/simd-everywhere/simde/archive/v$pkgver/$pkgname-v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}