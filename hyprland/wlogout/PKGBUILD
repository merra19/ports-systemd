# description	: Logout menu for wayland
# depends	: meson gtk3 gobject-introspection gtk-layer-shell

pkgname=wlogout
pkgver=1.2.2
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/ArtsyMacaw/$pkgname/releases/download/$pkgver/$pkgname.tar.gz)

build() {
    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}