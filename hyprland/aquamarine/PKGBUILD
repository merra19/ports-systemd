# description	: Aquamarine is a very light linux rendering backend library
# depends	: hyprutils hyprwayland-scanner libglvnd libdisplay-info
# depends	: libdrm libinput seatd wayland mesa pixman pugixml cmake
# depends	: wayland-protocols systemd

pkgname=aquamarine
pkgver=0.9.4
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/hyprwm/$pkgname/archive/refs/tags/v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	cmake -B build \
		-D CMAKE_INSTALL_PREFIX=/usr \
		-D CMAKE_BUILD_TYPE=Release
	cmake --build build
    DESTDIR="$pkgdir" cmake --install build
}