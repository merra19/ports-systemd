# description	: Wofi is a launcher/menu program for wlroots based wayland compositors like sway
# depends	: glibc cairo gdk-pixbuf glib gtk3 pango wayland meson

pkgname=wofi
pkgver=1.5.1
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://hg.sr.ht/~scoopta/wofi/archive/v$pkgver.tar.gz)

build() {
	cd $pkgname-v$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}