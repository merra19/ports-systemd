# description	: An efficient, principled regular expression library
# depends	: abseil-cpp gcc

pkgname=re2
pkgver=2024.07.02
_re2ver=${pkgver//./-}
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/google/re2/archive/$_re2ver.tar.gz)

build() {
	cd $pkgname-$_re2ver

    make shared
    make prefix=/usr DESTDIR="$pkgdir" shared-install
}