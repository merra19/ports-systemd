# description	: QML style provider for Hypr* QT app
# depends	: hyprlang qt6 cmake

pkgname=hyprland-qt-support
pkgver=0.1.0
pkgrel=1
source=($pkgname-$pkgver.tar.gz::https://github.com/hyprwm/$pkgname/archive/refs/tags/v$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	cmake -B build \
		-D CMAKE_INSTALL_PREFIX=/usr \
		-D INSTALL_QML_PREFIX=/usr/lib/qt6/qml \
		-D CMAKE_BUILD_TYPE=Release
	cmake --build build
    DESTDIR="$pkgdir" cmake --install build
}