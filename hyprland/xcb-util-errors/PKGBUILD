# description	: Library that gives human readable names to XCB error, event, & request codes
# depends	: glibc libxcb python xorg-proto

pkgname=xcb-util-errors
pkgver=1.0.1
pkgrel=1
source=(https://xorg.freedesktop.org/archive/individual/lib/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}