# description	: Grab images from a Wayland compositor
# depends	: cairo libjpeg-turbo wayland meson pango
# depends	: wayland-protocols

pkgname=grim
pkgver=1.4.1
pkgrel=1
source=(https://gitlab.freedesktop.org/emersion/grim/-/archive/v$pkgver/$pkgname-v$pkgver.tar.gz)

build() {
	cd $pkgname-v$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}