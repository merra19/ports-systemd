# description	: Library that simplifies the drawing of beautiful curves
# depends	: glibc

pkgname=libspiro
pkgver=20220722
pkgrel=1
source=(https://github.com/fontforge/libspiro/releases/download/$pkgver/$pkgname-dist-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}