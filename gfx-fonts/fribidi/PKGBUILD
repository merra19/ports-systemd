# description	: A free implementation of the unicode bidirectional algorithm"
# depends	: meson

pkgname=fribidi
pkgver=1.0.16
pkgrel=1
source=(https://github.com/fribidi/fribidi/releases/download/v$pkgver/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}