# description	: A libsass command line driver
# depends	: libsass

pkgname=sassc
pkgver=3.6.2
pkgrel=1
source=(https://github.com/sass/sassc/archive/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

	autoreconf -fi &&
	./configure --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}