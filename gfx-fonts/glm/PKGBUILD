# description	: OpenGL Mathematics
# depends	: glibc

pkgname=glm
pkgver=1.0.1
pkgrel=1
source=(https://github.com/g-truc/glm/archive/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver

    mkdir -p "$pkgdir"/usr/include/  "$pkgdir"/usr/share/doc/$pkgname-$pkgver
    cp -r glm "$pkgdir"/usr/include/ 
    cp -r doc "$pkgdir"/usr/share/doc/$pkgname-$pkgver
}