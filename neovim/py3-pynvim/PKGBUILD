# description	: Python client for Neovim
# depends	: python py3-wheel py3-greenlet py3-msgpack

pkgname=py3-pynvim
pkgver=0.5.2
pkgrel=1
source=(https://pypi.io/packages/source/p/pynvim/pynvim-$pkgver.tar.gz)

build() {
	cd pynvim-$pkgver

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	python3 -m installer -d "$pkgdir" .dist/*.whl
}