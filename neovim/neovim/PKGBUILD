# description	: Vim-fork focused on extensibility and agility
# depends	: glibc libuv ninja luajit cmake py3-pynvim

pkgname=neovim
pkgver=0.11.4
pkgrel=1
options=(!lto)
source=($pkgname-$pkgver.tar.gz::https://github.com/neovim/neovim/archive/refs/tags/v$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver
    make CMAKE_INSTALL_PREFIX=/usr USE_BUNDLED=1 CMAKE_BUILD_TYPE=Release
    make DESTDIR="$pkgdir" install
}