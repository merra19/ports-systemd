# description	: Gnome Settings Daemon
# depends	: geocode-glib gnome-desktop modemmanager nss xorg-libs
# depends	: libgweather colord upower networkmanager geoclue dconf
# depends	: libcanberra  libnotify pulseaudio libwacom wayland
# depends	: fontconfig linux-api-headers gcr4 cups alsa-lib
# depends	: xorg-proto
# todo      : gnome-session 

pkgname=gnome-settings-daemon
pkgver=48.1
pkgrel=1
source=(https://download.gnome.org/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D wwan="$(scratch isinstalled modemmanager && echo "true" || echo "false")" \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}