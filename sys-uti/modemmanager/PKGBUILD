# description	: Modem and mobile broadband management libraries
# depends	: libgudev glib systemd gobject-introspection libqmi 
# depends	: libmbim polkit vala

pkgname=modemmanager
_pkgname=ModemManager
pkgver=1.24.2
pkgrel=1
source=(https://gitlab.freedesktop.org/mobile-broadband/ModemManager/-/archive/$pkgver/ModemManager-$pkgver.tar.gz)

build() {
	cd $_pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D man=false  \
        -D qrtr=false \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
