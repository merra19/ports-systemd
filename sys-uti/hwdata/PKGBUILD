# description	: Hardware identification and configuration data
# depends	: glibc

pkgname=hwdata
pkgver=0.398
pkgrel=1
source=(https://github.com/vcrhonek/hwdata/archive/v$pkgver/$pkgname-$pkgver.tar.gz)

build() {
    cd $pkgname-$pkgver
    
    ./configure \
        --prefix=/usr \
        --disable-blacklist
    make DESTDIR="$pkgdir" install
}