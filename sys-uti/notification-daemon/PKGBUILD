# description	: Notification daemon
# depends	: glib libcanberra gtk3 xorg-libs

pkgname=notification-daemon
pkgver=3.20.0
pkgrel=1
source=(https://download.gnome.org/sources/notification-daemon/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-static
	make
    make DESTDIR="$pkgdir" install
}