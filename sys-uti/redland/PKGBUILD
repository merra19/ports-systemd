# description	: High-level interface for the Resource Description Framework
# depends	: libtool sqlite unixodbc rasqal mariadb postgresql

pkgname=redland
pkgver=1.0.17
pkgrel=1
options=(!lto)
source=(https://download.librdf.org/source/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

    scratch isinstalled postgresql ||  OPT_RED='--without-postgresql'

	./configure \
        --prefix=/usr \
        --disable-static \
        $OPT_RED
	make
    make DESTDIR="$pkgdir" install
}