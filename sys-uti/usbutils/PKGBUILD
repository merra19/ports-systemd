# description	: USB enumeration utilities
# depends	: glibc libusb hwdata python

pkgname=usbutils
pkgver=018
pkgrel=1
source=(https://kernel.org/pub/linux/utils/usb/usbutils/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
