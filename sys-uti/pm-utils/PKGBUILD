# description	: Suspend and hibernation utilities
# depends	: dbus util-linux xmlto hdparm wireless_tools systemd

pkgname=pm-utils
pkgver=1.4.1
pkgrel=1
source=(https://pm-utils.freedesktop.org/releases/$pkgname-$pkgver.tar.gz
        https://www.linuxfromscratch.org/patches/blfs/12.4/$pkgname-$pkgver-bugfixes-1.patch)

build() {
	cd $pkgname-$pkgver

    patch -Np1 -i ../$pkgname-$pkgver-bugfixes-1.patch

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --docdir=/usr/share/doc/$pkgname-$pkgver
    make
    make DESTDIR="$pkgdir" install
}