# description	: A command scheduler with extended capabilities over cron and anacron
# depends	: pam libxcrypt readline nano vim docbook-utils

pkgname=fcron
pkgver=3.4.0
pkgrel=1
options=(!makeflags)
source=(http://fcron.free.fr/archives/$pkgname-$pkgver.src.tar.gz
        run-parts systab.orig $pkgname.hooks)
backup=(var/spool/fcron/systab.orig)

build() {
    cd $pkgname-$pkgver

    #  fix some locations hard coded in the documentation
    find doc -type f -exec sed -i 's:/usr/local::g' {} \;

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --without-sendmail \
        --with-piddir=/run \
        --with-boot-install=no \
        --with-editor=/usr/bin/vim
    make

    install -vdm755 "$pkgdir"/etc/pam.d

    make DESTDIR="$pkgdir" install
    
    install -Dm755 ../run-parts "$pkgdir"/usr/bin/run-parts
    install -vdm754 "$pkgdir"/etc/cron.{hourly,daily,weekly,monthly}
    install -Dm644  ../systab.orig "$pkgdir"/var/spool/fcron/systab.orig

    install -Dm755 "$srcdir"/$pkgname.hooks "$pkgdir"/usr/share/blfs-bootscripts/hooks/$pkgname.hooks
}
