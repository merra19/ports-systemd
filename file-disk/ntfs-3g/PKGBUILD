# description	: Open source read-write NTFS driver that runs under FUSE
# depends	: util-linux attr

pkgname=ntfs-3g
pkgver=2022.10.3
pkgrel=2
options=(!lto)
source=(https://tuxera.com/opensource/ntfs-3g_ntfsprogs-$pkgver.tgz)

build() {
	cd ntfs-3g_ntfsprogs-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static \
        --with-fuse=internal \
        --disable-ldconfig \
        --docdir=/usr/share/doc/ntfs-3g-$pkgver
    make
	make DESTDIR="$pkgdir" install

    ln -sv ../bin/ntfs-3g "$pkgdir"/usr/sbin/mount.ntfs
    ln -sv ntfs-3g.8 "$pkgdir"/usr/share/man/man8/mount.ntfs.8
}