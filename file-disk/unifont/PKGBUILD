# description	:  Unicode font data for the GRUB menu
# depends	: gzip

pkgname=unifont
pkgver=16.0.04
pkgrel=1
options=(!makeflags !lto)
source=(https://unifoundry.com/pub/unifont/unifont-$pkgver/font-builds/unifont-$pkgver.pcf.gz)

build() {
    mkdir -pv "$pkgdir"/usr/share/fonts/unifont &&
    gunzip -c unifont-$pkgver.pcf.gz > "$pkgdir"/usr/share/fonts/unifont/unifont.pcf
}