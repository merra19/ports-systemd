# description	: Btrfs filesystem utilities
# depends	: glibc lzo lvm2 util-linux zlib python systemd zstd acl
# depends	: linux-api-headers

pkgname=btrfs-progs
pkgver=6.16
pkgrel=1
source=(https://www.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/$pkgname-v$pkgver.tar.xz)

build() {
    cd $pkgname-v$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static \
        --disable-documentation
    make
    make DESTDIR="$pkgdir" install

    mkdir -p "$pkgdir"/usr/share/man/man{5,8}

    for i in 5 8; do
        install Documentation/*.$i "$pkgdir"/usr/share/man/man$i
    done
}