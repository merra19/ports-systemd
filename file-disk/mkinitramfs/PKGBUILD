# description	: Modular initramfs image creation utility
# depends	: cpio mdadm kmod libarchive

pkgname=mkinitramfs
pkgver=2.5
pkgrel=1
source=(mkinitramfs.conf mkinitramfs lsmkinitramfs init.in base.hook
		modules.hook udev.hook liveiso.hook automod.hook)

build() {
    mkdir -p "$pkgdir"/usr/sbin/ "$pkgdir"/usr/share/mkinitramfs/hooks

    install -Dm 755 mkinitramfs lsmkinitramfs "$pkgdir"/usr/sbin/
    install -Dm 755 init.in "$pkgdir"/usr/share/mkinitramfs/

	install -m 644 *.hook "$pkgdir"/usr/share/mkinitramfs/hooks
    install -Dm 644 mkinitramfs.conf "$pkgdir"/etc/mkinitramfs.conf

	install -d "$pkgdir"/etc/mkinitramfs.d
}