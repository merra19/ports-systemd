# description	: A GObject plugins library
# depends	: glib gobject-introspection lua py3-gobject gtk3 libxml2

pkgname=libpeas
pkgver=1.36.0
pkgrel=1
source=(https://download.gnome.org/sources/libpeas/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --wrap-mode=nofallback \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}