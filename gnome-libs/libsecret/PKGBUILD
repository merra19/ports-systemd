# description	: GObject library for accessing the freedesktop.org Secret Service API
# depends	: glib libgcrypt gobject-introspection vala

pkgname=libsecret
pkgver=0.21.7
pkgrel=1
source=(https://download.gnome.org/sources/libsecret/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gtk_doc=false \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build

    # conflict bash-completion
    rm -rf "$pkgdir"/usr/share/bash-completion/completions/secret-tool
}