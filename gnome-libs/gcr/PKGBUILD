# description	: Libraries for cryptographic UIs and accessing PKCS#11 modules
# depends	: glib libgcrypt p11-kit libsecret gobject-introspection 
# depends	: gnupg gettext pkgconf vala libxslt gtk3

pkgname=gcr
pkgver=3.41.2
pkgrel=1
source=(https://download.gnome.org/sources/gcr/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

    sed -i 's:"/desktop:"/org:' schema/*.xml

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gtk_doc=false \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build

    mv "$pkgdir"/usr/libexec/gcr-ssh-agent "$pkgdir"/usr/libexec/gcr-ssh-agent3
}