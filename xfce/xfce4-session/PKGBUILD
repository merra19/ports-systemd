# description	: A session manager for the Xfce desktop environment
# depends	: libwnck libxfce4ui libxfce4windowing polkit-gnome
# depends	: pkgconf intltool polkit gettext xfdesktop xscreensaver
# depends	: desktop-file-utils shared-mime-info

pkgname=xfce4-session
pkgver=4.20.3
pkgrel=1
source=(https://archive.xfce.org/src/xfce/xfce4-session/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-legacy-sm
    make
    make DESTDIR="$pkgdir" install
}