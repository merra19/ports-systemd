# description	: Panel for the Xfce desktop environment
# depends	: cairo gtk3 libwnck exo garcon libxfce4windowing
# depends	: libdbusmenu gettext intltool pkgconf perl

pkgname=xfce4-panel
pkgver=4.20.5
pkgrel=1
source=(https://archive.xfce.org/src/xfce/xfce4-panel/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc
    make
    make DESTDIR="$pkgdir" install
}