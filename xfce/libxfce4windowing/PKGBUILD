# description	: Windowing concept abstraction library for X11 and Wayland for Xfce
# depends	: gtk3 libwnck libdisplay-info gettext xfce4-dev-tools
# depends	: wayland-protocols perl pkgconf

pkgname=libxfce4windowing
pkgver=4.20.4
pkgrel=1
source=(https://archive.xfce.org/src/xfce/libxfce4windowing/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --enable-x11 \
        --disable-debug
    make
    make DESTDIR="$pkgdir" install
}
