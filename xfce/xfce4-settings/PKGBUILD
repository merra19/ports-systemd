# description	: Configuration system for the Xfce desktop environment
# depends	: garcon exo gettext pkgconf intltool colord libcanberra
# depends	: xorg-proto libnotify libxklavier libinput wayland
# depends	: xf86-input-libinput upower gnome-icon-theme

pkgname=xfce4-settings
pkgver=4.20.2
pkgrel=1
source=(https://archive.xfce.org/src/xfce/xfce4-settings/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc
    make
    make DESTDIR="$pkgdir" install
}