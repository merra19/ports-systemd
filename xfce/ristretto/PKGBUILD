# description	: A fast and lightweight picture viewer for Xfce
# depends	: libexif file libxfce4ui tumbler

pkgname=ristretto
pkgver=0.13.4
pkgrel=1
source=(https://archive.xfce.org/src/apps/ristretto/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
