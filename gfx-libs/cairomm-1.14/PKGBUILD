# description	: C++ bindings for the Cairo vector graphics library
# depends	: cairo libsigc++-2

pkgname=cairomm-1.14
pkgver=1.14.5
pkgrel=1
source=(https://www.cairographics.org/releases/cairomm-$pkgver.tar.xz)

build() {
	cd cairomm-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
		-D build-tests=true \
		-D boost-shared=true \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
