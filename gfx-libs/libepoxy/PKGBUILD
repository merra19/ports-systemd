# description	: Library for handling OpenGL function pointer management
# depends	: mesa meson

pkgname=libepoxy
pkgver=1.5.10
pkgrel=1
source=(https://download.gnome.org/sources/libepoxy/1.5/$pkgname-$pkgver.tar.xz)

build() {
    cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
