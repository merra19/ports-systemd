# description	: D-Bus accessibility specifications and registration daemon
# depends	: dbus glib gobject-introspection xorg-libs systemd
# depends	: gsettings-desktop-schemas 

pkgname=at-spi2-core
pkgver=2.56.4
pkgrel=1
source=(https://download.gnome.org/sources/at-spi2-core/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D gtk2_atk_adaptor=false \
        build
	ninja -C build
	DESTDIR="$pkgdir" ninja install -C build
}
