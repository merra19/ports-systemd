# description	: C++ interface for GTK+
# depends	: atkmm-2.28 gtk3 pangomm-2.46

pkgname=gtkmm-3.24
pkgver=3.24.10
pkgrel=1
source=(https://download.gnome.org/sources/gtkmm/${pkgver%.*}/gtkmm-$pkgver.tar.xz)

build() {
	cd gtkmm-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        gtkmm3-build
	ninja -C gtkmm3-build
    DESTDIR="$pkgdir" ninja install -C gtkmm3-build
}
