# description	: Internationalized text layout and rendering library
# depends	: fontconfig freetype harfbuzz fribidi glib cairo 
# depends	: gobject-introspection xorg-proto xorg-libs

pkgname=pango
pkgver=1.56.4
pkgrel=1
source=(https://download.gnome.org/sources/pango/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --wrap-mode=nofallback \
        -D introspection=enabled \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}