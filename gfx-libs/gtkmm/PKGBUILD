# description	: C++ interface for GTK+
# depends	: gtk4 pangomm vulkan-loader

pkgname=gtkmm
pkgver=4.18.0
pkgrel=1
source=(https://download.gnome.org/sources/gtkmm/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        gtkmm4-build
	ninja -C gtkmm4-build
    DESTDIR="$pkgdir" ninja install -C gtkmm4-build
}
