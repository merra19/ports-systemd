# description	: C++ interface for the ATK library
# depends	: at-spi2-core glibmm

pkgname=atkmm
pkgver=2.36.3
pkgrel=1
source=(https://download.gnome.org/sources/atkmm/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
