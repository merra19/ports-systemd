# description	: A library for the X Keyboard Extension (high-level API)
# depends	: iso-codes glib libxml2 gobject-introspection xorg-libs

pkgname=libxklavier
pkgver=5.4
pkgrel=1
source=(https://people.freedesktop.org/~svu/$pkgname-$pkgver.tar.bz2)

build() {
    cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr \
        --disable-static
    make
    make DESTDIR="$pkgdir" install
}
