# description	: Building blocks for modern adaptive GNOME apps
# depends	: gtk3 vala

pkgname=libhandy
pkgver=1.8.3
pkgrel=1
source=(https://download.gnome.org/sources/libhandy/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}