# description	: C++ interface for pango
# depends	: cairomm glibmm pango

pkgname=pangomm
pkgver=2.56.1
pkgrel=1
source=(https://download.gnome.org/sources/pangomm/${pkgver%.*}/pangomm-$pkgver.tar.xz)

build() {
	cd pangomm-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}
