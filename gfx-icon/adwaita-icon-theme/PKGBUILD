# description	: GNOME default icon theme
# depends	: gtk3 librsvg

pkgname=adwaita-icon-theme
pkgver=48.1
pkgrel=1
source=(https://download.gnome.org/sources/adwaita-icon-theme/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
    DESTDIR="$pkgdir" ninja install -C build
}