# description	: GNOME Icons Theme contains assortment of non-scalable icons of different sizes and themes
# depends	: gtk3  hicolor-icon-theme icon-naming-utils

pkgname=gnome-icon-theme
pkgver=3.12.0
pkgrel=1
source=(https://download.gnome.org/sources/gnome-icon-theme/${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

    ./configure \
        --prefix=/usr
    make
    make DESTDIR="$pkgdir" install
}