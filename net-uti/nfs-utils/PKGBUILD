# description	: NFS client and server daemons
# depends	: libevent libnl libtirpc libxml2 rpcsvc-proto sqlite
# depends	: libnsl lvm2 libcap pam rpcbind
# optional	: krb5 openldap

pkgname=nfs-utils
pkgver=2.8.3
pkgrel=1
source=(https://www.kernel.org/pub/linux/utils/nfs-utils/$pkgver/$pkgname-$pkgver.tar.xz
        nfs-server 0001-Fix-build-with-glibc-2.42.patch)
backup=(etc/sysconfig/nfs-server)

build() {
    cd $pkgname-$pkgver

    patch -Np1 -i ../0001-Fix-build-with-glibc-2.42.patch

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --sbindir=/usr/sbin \
        --disable-nfsv4 \
        --disable-gss \
        LIBS="-lsqlite3 -levent_core"
    make
    make DESTDIR="$pkgdir" install
    
    mv "$pkgdir"/sbin/* "$pkgdir"/usr/sbin/
    rm -rf "$pkgdir"/sbin

    chmod u+w,go+r "$pkgdir"/usr/sbin/mount.nfs
    chown nobody:nogroup "$pkgdir"/var/lib/nfs

    install -Dm 0644 ../nfs-server "$pkgdir"/etc/sysconfig/nfs-server
}