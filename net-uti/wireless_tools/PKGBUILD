# description	: A collection of tools to configure IEEE 802.11 wireless LAN card
# depends	: glibc

pkgname=wireless_tools
pkgver=29
pkgrel=1
source=(https://hewlettpackard.github.io/wireless-tools/$pkgname.$pkgver.tar.gz
        https://www.linuxfromscratch.org/patches/blfs/12.3/$pkgname-$pkgver-fix_iwlist_scanning-1.patch)

build() {
    cd $pkgname.$pkgver

    patch -Np1 -i ../wireless_tools-$pkgver-fix_iwlist_scanning-1.patch

    make CFLAGS="${CFLAGS} -I." LDFLAGS="${LDFLAGS}"
    make PREFIX="$pkgdir"/usr INSTALL_MAN="$pkgdir"/usr/share/man install
}